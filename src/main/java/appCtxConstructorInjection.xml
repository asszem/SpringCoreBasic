<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Instantiating Bean without any arguments -->
	<bean id="phoneOwnerWithoutConstructorArgumentsBean" class="dependencyInjectionBasic.PhoneOwner">
	</bean>

	<!-- Instantiating Bean with Name argument -->
	<bean id="phoneOwnerWithNameConstructorArgument" class="dependencyInjectionBasic.PhoneOwner">
		<constructor-arg name="ownerNameArgument" value="Constructor Arg Name"
			type="String"></constructor-arg>
	</bean>

	<bean id="phoneOwnerWithConstructorANDSetterArgument" class="dependencyInjectionBasic.PhoneOwner">
		<constructor-arg name="ownerNameArgument" value="Original Constructor Arg Name"></constructor-arg>
		<!-- The 'name' value should be the name of the setter methodm, in this 
			case: setOwnerName -->
		<property name="ownerName" value="Setter Name"></property>
	</bean>

</beans>  