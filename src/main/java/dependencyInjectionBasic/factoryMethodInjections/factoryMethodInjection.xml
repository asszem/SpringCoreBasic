<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Static factory method that returns instance of its own class (singleton) -->
	<bean id="tabletWithoutArguments" class="dependencyInjectionBasic.Tablet" factory-method="getTablet" />

	<!-- Static factory method that returns instance of ANOTHER class -->
	<bean id="tabletFactoryGetPhone" class="dependencyInjectionBasic.Tablet" factory-method="getPhone" />

	<!-- Non-Static factory method that returns instance of ANOTHER class -->
	<bean id="tabletBean" class="dependencyInjectionBasic.Tablet"/>
	<bean id="tabletNonStaticFactoryGetPhone" class="dependencyInjectionBasic.Tablet" factory-method="createPhone" factory-bean="tabletBean" />



</beans>  