<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="smartPhoneBean" class="dependencyInjectionBasic.Phone">
		<constructor-arg value="Huawei"></constructor-arg>
		<constructor-arg value="P10"></constructor-arg>
		<constructor-arg value="Brown"></constructor-arg>
	</bean>

	<!-- Injecting a Phone object -->
	<bean id="phoneOwnerBean" class="dependencyInjectionBasic.PhoneOwner">
		<constructor-arg name="phone">
			<ref bean="smartPhoneBean"></ref>
		</constructor-arg>
		<constructor-arg name="ownerNameArgument" value="Huawei Owner"></constructor-arg>
	</bean>


</beans>  