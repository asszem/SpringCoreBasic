<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- This bean is going to be inherited, to avoid parameter ambiguity add 
		the "name" and/or 'type' attribute -->
	<bean id="samsungPhone" class="dependencyInjectionBasic.Phone">
		<constructor-arg name="vendor" value="Samsung" type="String"></constructor-arg>
		<constructor-arg name="type" value="Galaxy S9"></constructor-arg>
		<constructor-arg name="color" value="Black"></constructor-arg>
	</bean>

	<!-- This is the inherited method, with one different argument -->
	<bean id="samsungPhoneInherited" class="dependencyInjectionBasic.Phone"
		parent="samsungPhone">
		<constructor-arg name="color" value="Inherited White"></constructor-arg>
	</bean>

	<!-- Phone Owner injected with the inherited phone -->
	<bean id="singlePhoneOwnerBean" class="dependencyInjectionBasic.PhoneOwner">
		<constructor-arg name="ownerNameArgument" value="Samsung Sam"></constructor-arg>
		<constructor-arg>
			<ref bean="samsungPhoneInherited"></ref>
		</constructor-arg>
	</bean>

	<!-- Parent bean will be inherited, so the name attribute must be defined 
		here too -->
	<bean id="originalSellerBean" class="dependencyInjectionBasic.PhoneSeller">
		<constructor-arg name="sellerName" value="Original Seller Name"></constructor-arg>
		<constructor-arg name="customers">
			<map>
				<entry key="customer1" value-ref="singlePhoneOwnerBean"></entry>
			</map>

		</constructor-arg>
	</bean>

	<!-- Inherited bean -->
	<bean id="inheritedSellerBean" class="dependencyInjectionBasic.PhoneSeller"
		parent="originalSellerBean">
		<constructor-arg name="sellerName" value="Inherited Seller Name"></constructor-arg>
		<constructor-arg name="customers">
			<map>
				<entry key="customer2" value-ref="singlePhoneOwnerBean"></entry>
			</map>
		</constructor-arg>
	</bean>

</beans>  