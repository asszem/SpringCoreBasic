<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="smartPhoneBean" class="dependencyInjectionBasic.Phone">
		<constructor-arg value="Huawei"></constructor-arg>
		<constructor-arg value="P10"></constructor-arg>
		<constructor-arg value="Brown"></constructor-arg>
	</bean>

	<bean id="phoneOwnerBean" class="dependencyInjectionBasic.PhoneOwner">
		<constructor-arg value="1" type="int"></constructor-arg>
		<constructor-arg value="AndrÃ¡s"></constructor-arg>
		<constructor-arg>
			<ref bean="smartPhoneBean"></ref>
		</constructor-arg>
	</bean>

	<bean id="phoneBookBean" class="dependencyInjectionBasic.Phonebook">
		<constructor-arg value="1" type="int"></constructor-arg>
		<constructor-arg>
			<ref bean="phoneOwnerBean"></ref>
		</constructor-arg>
		<constructor-arg>
			<list>
				<value>Contact 1.</value>
				<value>Contact 2.</value>
				<value>Contact 3.</value>
				<value>Contact 4.</value>
			</list>
		</constructor-arg>
	</bean>

</beans>  