<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="huaweiPhone" class="dependencyInjectionBasic.Phone">
		<constructor-arg value="Huawei"></constructor-arg>
		<constructor-arg value="P10"></constructor-arg>
		<constructor-arg value="Brown"></constructor-arg>
	</bean>

	<bean id="samsungPhone" class="dependencyInjectionBasic.Phone">
		<constructor-arg value="Samsung"></constructor-arg>
		<constructor-arg value="Galaxy S9"></constructor-arg>
		<constructor-arg value="Black"></constructor-arg>
	</bean>

	<!-- Phone Owner with one phone injected -->
	<bean id="singlePhoneOwnerBean" class="dependencyInjectionBasic.PhoneOwner">
		<constructor-arg value="1" type="int"></constructor-arg>
		<constructor-arg value="Huawei Henry"></constructor-arg>
		<constructor-arg>
			<ref bean="huaweiPhone"></ref>
		</constructor-arg>
	</bean>

	<!-- Phone Owner with one phone injected -->
	<bean id="singlePhoneOwnerBean2" class="dependencyInjectionBasic.PhoneOwner">
		<constructor-arg value="2" type="int"></constructor-arg>
		<constructor-arg value="Samsung Sam"></constructor-arg>
		<constructor-arg>
			<ref bean="samsungPhone"></ref>
		</constructor-arg>
	</bean>
	
	<bean id="sellerBean" class="dependencyInjectionBasic.PhoneSeller">
		<constructor-arg value="Seller Name"></constructor-arg>
		<constructor-arg>
			<map>
			<entry key="customer1" value-ref="singlePhoneOwnerBean"></entry>
			<entry key="customer2" value-ref="singlePhoneOwnerBean2"></entry>
			</map>	
		
		</constructor-arg>
	</bean>


</beans>  